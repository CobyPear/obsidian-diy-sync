{
  "name": "obsidian-sync-server",
  "version": "0.1.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "build:prod": "pnpm clean && pnpm prisma:migrate-deploy && tsc",
    "clean": "rm -rf  ./build/*.js ./build/**/*.js && echo 'Removed *.js files!'",
    "dev": "pnpm watch & NODE_ENV=development pnpm nodemon ./build/server.js",
    "prisma:db-push-prod": "prisma push dev --schema./db/schema.prod.prisma",
    "prisma:generate-dev": "prisma generate --schema=./db/schema.dev.prisma",
    "prisma:generate-prod": "prisma generate --schema=./db/schema.prod.prisma",
    "prisma:migrate-dev": "prisma migrate dev --schema=./db/schema.dev.prisma",
    "prisma:migrate-deploy": "prisma migrate deploy --schema=./db/schema.prod.prisma",
    "start:prod": "NODE_ENV=production node ./build/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "tsc --watch"
  },
  "keywords": [],
  "author": "CobyPear",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "morgan": "^1.10.0",
    "sqlite3": "^5.0.11",
    "winston": "^3.8.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.20.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "prisma": "^4.1.1",
    "typescript": "^4.7.4"
  }
}
