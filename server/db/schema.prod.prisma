datasource db {
    provider = "sqlite"
    url      = "file:/data/sqlite.db"
}

generator client {
    provider = "prisma-client-js"
}

model Vault {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    name      String
    nodes     Node[]
}

// A node is something in a vault
model Node {
    id        Int    @id @default(autoincrement())
    Vault     Vault? @relation(fields: [vaultId], references: [id])
    vaultId   Int?
    content   String
    extension String
    name      String
    path      String
    ctime     BigInt
    mtime     BigInt
}
