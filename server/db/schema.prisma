datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id          Int     @id @default(autoincrement())
    username    String  @unique
    password    String
    Vaults      Vault[]
    refrehToken String
}

model Vault {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    name      String
    nodes     Node[]
    User      User?    @relation(fields: [userId], references: [id])
    userId    Int?
}

// A node is something in a vault
model Node {
    id        Int    @id @default(autoincrement())
    Vault     Vault? @relation(fields: [vaultId], references: [id])
    vaultId   Int?
    content   String
    extension String
    name      String
    path      String
    ctime     String
    mtime     String
}
