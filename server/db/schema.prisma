datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id       Int    @id @default(autoincrement())
    username String @unique
    password String
}

model Session {
    id        String   @id
    sid       String   @unique
    data      String
    expiresAt DateTime
}

model Vault {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    name      String
    nodes     Node[]
}

// A node is something in a vault
model Node {
    id        Int    @id @default(autoincrement())
    Vault     Vault? @relation(fields: [vaultId], references: [id])
    vaultId   Int?
    content   String
    extension String
    name      String
    path      String
    ctime     String
    mtime     String
}
